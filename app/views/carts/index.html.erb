<h2>購物車列表</h2>
<span class="pull-right"><%= link_to("清空購物車", clean_carts_path, method: :delete, class: "btn btn-danger") %>
</span>
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>商品名稱</th>
      <th>單價</th>
      <th>數量</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |product| %>
    <tr>
      <td><% if product.photo.image.present? %>
      <%= image_tag(product.photo.image.thumb.url, class: "thumbnail") %>
      <% else %>
      <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
      <% end %></td>
      <td><%= product.title %></td>
      <td><%= product.price %></td>
      <td><% item = current_cart.find_cart_item(product) %>
          <%= form_for item, url: item_path(product) do |f|%>
            <%= f.select :quantity, 1..product.quantity %>
            <%= f.submit "更新", data: { disable_with: "Submiting..." } %>
          <% end %></td>
      <td><%= link_to item_path(product),method: :delete do %><i class="fa fa-trash"></i><% end %></td>
    </tr>
    <% end %>
  </tbody>
  </table>
  <div class="clearfix">
    <span class="pull-right">總計<%= render_total_price(current_cart) %> NTD</span>
  </div>
  <div class="clearfix">
    <span class="pull-right"><%= link_to("確認購買", checkout_carts_path, method: :post, class: "btn btn-danger") %></span>
    </div>
