<h2>填寫訂單資訊</h2>
<table class="table">
  <thead>
    <tr>
      <th>商品圖片</th>
      <th>商品名稱</th>
      <th>商品單價</th>
      <th>商品數量</th>
      <th>刪除</th>
    </tr>
  </thead>
  <tbody>
  <% current_cart.items.each do |cart_item| %>
    <tr>
      <td>
      <% if cart_item.photo.image.present? %>
      <%= image_tag(cart_item.photo.image.thumb.url, class: "thumbnail") %>
      <% else %>
      <%= image_tag("http://placehold.it/200x200&text=No pic", class: "thumbnail") %>
      <% end%>
      </td>
      <td>
      <%= link_to(cart_item.title, product_path(cart_item)) %>
      </td>
      <td>
      <%= cart_item.price %>
      </td>
      <td>
      1
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<div class="clearfix">
  <span class="pull-right">總計 <%= render_cart_total_price(current_cart) %> NTD</span>
</div>
<%= simple_form_for @order do |f| %>
<%= f.simple_fields_for :info do |c| %>
<div class="form-group">
<%= c.input :billing_name %> - <%= c.input :billing_address %>
</div>
<div class="form-group">
<%= c.input :shipping_name %> - <%= c.input :shipping_address %>
</div>
<% end %>
<div class="form-actions">
<%= f.submit "下訂", class: "btn btn-primary"%>
</div>
<% end %>


