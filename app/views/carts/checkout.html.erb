<h2>訂單資訊填寫</h2>
<table class="table">
  <thead>
    <tr>
      <th>商品明細</th>
      <th>單價</th>
      <th>數量</th>
    </tr>
  </thead>
  <tbody>
    <% current_cart.items.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.price %></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
  </table>
  <div class="clearfix">
  <span class="pull-right">總計 <%= render_total_price(current_cart) %></span>
  </div>
  <%= simple_form_for @order do |f| %>
  <%= f.simple_fields_for :info do |c| %>
  <legend>訂購人</legend>
  <%= c.input :billing_name %>
  <%= c.input :billing_address %>
  <legend>收件人</legend>
  <%= c.input :shipping_name %>
  <%= c.input :shipping_address %>
  <%= f.submit "submit", disable_with: "Submitting...", class: "btn btn-primary" %>
  <% end %>
  <% end %>

