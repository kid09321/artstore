<h2>填寫訂單資訊</h2>
<table class="table">
  <thead>
    <tr>
      <th>商品圖片</th>
      <th>商品名稱</th>
      <th>商品尺寸</th>
      <th>商品單價</th>
      <th>商品數量</th>
      <th>商品總價</th>
    </tr>
  </thead>
  <tbody>
  <% cart_item = current_cart.cart_items.select("product_id, size, sum(quantity) as quantity").group("product_id, size") %>
  <% cart_item.each do |cart_item| %>
  <% product = cart_item.product %>
    <tr>
      <td>
      <% if product.photo.image.present? %>
      <%= image_tag(product.photo.image.thumb.url, class: "thumbnail") %>
      <% else %>
      <%= image_tag("http://placehold.it/200x200&text=No pic", class: "thumbnail") %>
      <% end%>
      </td>
      <td>
      <%= link_to(product.title, product_path(product)) %>
      </td>
      <td>
      <%= cart_item.size %>
      </td>
      <td>
      <%= product.price %>
      </td>
      <td>
      <%= cart_item.quantity %>
      </td>
      <td>
      <%= product.price * current_cart.find_cart_item(product).quantity%>
    </tr>
  <% end %>
  </tbody>
</table>
<div class="clearfix">
  <span class="pull-right">總計 <%= render_cart_total_price(current_cart) %> NTD</span>
</div>
<%= simple_form_for @order do |f| %>
<%= f.simple_fields_for :info do |c| %>
<div class="form-group">
<%= c.input :billing_name %> - <%= c.input :billing_address %>
</div>
<div class="form-group">
<%= c.input :shipping_name %> - <%= c.input :shipping_address %>
</div>
<% end %>
<div class="form-actions">
<%= f.submit "下訂", class: "btn btn-primary"%>
</div>
<% end %>


