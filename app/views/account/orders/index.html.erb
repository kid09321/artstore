<h2>您的訂單列表</h2>
<table class="table">
  <thead>
    <tr>
      <th>編號</th>
      <th>下訂時間</th>
      <th>訂單狀態</th>
    </tr>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= link_to(order.id, order_path(order.token)) %></td>
      <td><%= order.created_at.to_s(:long) %></td>
      <td><%= render_order_state(order) %></td>
    </tr>
    <% end %>
  </tbody>
</thead>
