<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th>帳單編號</th>
          <th>生成時間</th>
          <th>訂單狀態</th>
        </tr>
      </thead>
      <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to(order.id, order_path(order.token)) %></td>
          <td><%= order.created_at %></td>
          <td><%= render_order_state(order) %></td>

        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

