<div class="col-md-4 col-md-offset-4">
  <h2 class="text-center">新增商品尺寸</h2>
  <%= simple_form_for [:admin,@product,@size] do |f| %>
    <div class="group">
      <%= f.select :size, ["XL","L", "M", "S"], {class: "size"}%>
    </div>
    <div class="group">
      <%= f.input :quantity %>
    </div>
    <div class="form-actions">
      <%= f.submit "Submit", data: { disable_with: "Submitting..." }, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
