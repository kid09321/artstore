<h2>系統訂單</h2>
<table class="table">
  <thead>
    <tr>
      <th>編號</th>
      <th>下訂者</th>
      <th>訂購時間</th>
      <th>訂單狀態</th>
    </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= link_to(order.id, admin_order_path(order)) %></td>
      <td><%= order.user.email %></td>
      <td><%= order.created_at.to_s %></td>
      <td><%= render_order_state(order) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
