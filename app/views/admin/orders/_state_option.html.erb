<div style="padding:20px; float:right;">

<% case order.aasm_state %>
  <% when "order_placed" %>
    <%= link_to("取消訂單", cancel_admin_order_path(order), method: :post, class: "btn btn-danger" ) %>
  <% when "paid" %>
    <%= link_to("取消訂單", cancel_admin_order_path(order), method: :post,class: "btn btn-danger" ) %>
    <%= link_to("出貨", ship_admin_order_path(order), method: :post,class: "btn btn-primary") %>
  <% when "shipping" %>
    <%= link_to("已到貨", shipped_admin_order_path(order), method: :post,class: "btn btn-primary") %>
  <% when "shipped" %>
    <%= link_to("退貨", return_admin_order_path(order), method: :post, class: "btn btn-danger") %>
  <% when "good_returned" %>
    <%= "已退貨" %>
  <% when "order_cancelled" %>
    <% "訂單已取消" %>
  <% end %>
</div>
