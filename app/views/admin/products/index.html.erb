<h2>後台商品列表</h2>
<h2 class="pull-right"><%= link_to("新建商品", new_admin_product_path, class: "btn btn-info") %></h2>
<table class="table">
<thead>
  <tr>
    <th>#</th>
    <th>商品圖</th>
    <th>商品名稱</th>
    <th>商品庫存</th>
    <th>商品價格</th>
    <th>操作</th>
  </tr>
</thead>
<tbody>
<% @products.each do |product| %>
 <tr>
   <td>#</td>
   <td><%= image_tag(product.photo.image.thumb.url, class: "thumbnail") %></td>
   <td><%= link_to(product.title, "#") %></td>
   <td><%= product.quantity %></td>
   <td><%= product.price %></td>
   <td><%= link_to("編輯", edit_admin_product_path(product)) %>
       <%= link_to("刪除", admin_product_path(product), method: :delete, data: {confirm: "are you sure"}) %>
   </td>
 </tr>
 <% end %>
 </tbody>
 </table>

