<h2>登入</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true , label: "電子信箱"%>
    <%= f.input :password, required: false,label: "密碼" %>
    <%= f.input :remember_me, as: :boolean,label: "記得我"if devise_mapping.rememberable?  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "登入" %>
  </div>
<% end %>
<div style="padding-top:20px;">
<%= link_to("使用Facebook帳號登入", user_omniauth_authorize_path(:facebook),class: "btn btn-primary fa fa-facebook-official fa-2x") %>
</div>
<hr>
