<h2>訂單列表</h2>
<table class="table">
  <thead>
      <tr>
        <th>商品名稱</th>
        <th>商品單價</th>
        <th>商品數量</th>
      </tr>
    </thead>
  <tbody>
  <% @order_items.each do |order_item| %>
    <tr>
      <td><%= order_item.product_name %></td>
      <td><%= order_item.price %></td>
      <td><%= order_item.quantity %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<div class="clearfix">
  <span class="pull-right">總計 <%= render_cart_total_price(current_cart) %></span>
</div>
<table class="table">
  <tbody>
    <tr>
      <td>訂購人</td>
    </tr>
    <tr>
      <td><%= @order_info.billing_name %> - <%= @order_info.billing_address %></td>
    </tr>
    <tr>
      <td><%= @order_info.shipping_name %> - <%= @order_info.shipping_address %></td>
    </tr>
  </tbody>
</table>
<div class="clearfix">
<% if !@order.is_paid? %>
  <span class="pull-right"><%= link_to("以ATM付款", "#", class: "btn btn-info") %><%= link_to("以信用卡付款", pay_with_credit_card_order_path(@order.token), class: "btn btn-info") %></span>
<% else %>
  <span class="pullright">此帳單已完成付款</span>
  <% end %>
</div>

