<h2>訂單列表</h2>
<table class="table">
  <thead>
      <tr>
        <th>商品名稱</th>
        <th>商品尺寸</th>
        <th>商品單價</th>
        <th>商品數量</th>
        <th>商品總價</th>
      </tr>
    </thead>
  <tbody>
  <% @order_items.each do |order_item| %>
    <tr>
      <td><%= order_item.product_name %></td>
      <td><%= order_item.size %></td>
      <td><%= order_item.price %></td>
      <td><%= order_item.quantity %></td>
      <td><%= order_item.price * order_item.quantity %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<div class="clearfix">
  <span class="total-price pull-right">總計 <%= @order.total %>NTD</span>
</div>
<table class="table">
  <tbody>
    <tr>
      <td>訂購人</td>
    </tr>
    <tr>
      <td><%= @order_info.billing_name %> - <%= @order_info.billing_address %></td>
    </tr>
    <tr>
      <td><%= @order_info.shipping_name %> - <%= @order_info.shipping_address %></td>
    </tr>
  </tbody>
</table>
<div class="clearfix">
<% if !@order.is_paid? %>
  <div class="pull-right" style="padding: 10px;">
    <%= render "pay_with_credit_card", order: @order %>
  </div>
  <div class="pull-right" style="padding: 10px;">
    <%= render "pay_with_atm", order: @order %>
  </div>
<% else %>
  <span class="pullright">此帳單已完成付款</span>
  <% end %>
</div>

